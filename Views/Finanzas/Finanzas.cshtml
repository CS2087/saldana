
@{
    ViewBag.Title = "Finanzas";
}

<h2>Finanzas</h2>

<p>Calcular Promociones de los productos</p>


<form method="post" action="/Finanzas/Finanzas">
    <div class="form-group">
        <label>Producto</label>
        <input type="text" name="nom" class="form-control" id="nombre" aria-describedby="nombre" placeholder="Nombre">
    </div>
    <div class="form-group">
        <label>Ingrese Categoria:</label>
        <select class="form-control" name="cat">
            <option>Vestimenta</option>
            <option>Electrodomestico</option>
            <option>Electronica</option>
        </select>
    </div>
    <div class="form-group ">
        <label>Precio</label>
        <input type="text" name="pre" class="form-control" id="precio" aria-describedby="precio" placeholder="Precio">
    </div>
    <div class="form-group">
        <label>
            Ingrese Oferta:
        </label>
        <select class="form-control" name="ofe">
            <option value="En Oferta">En Oferta</option>
            <option value="No Oferta">No Oferta</option>
        </select>
    </div>

    <input type="submit" class="btn btn-primary" value="Calcular Promocion">
</form>
</br>
<table class="table table-hover">
    <tr>
        <td>Nombre</td>
        <td>Categoria</td>
        <td>Precio</td>
        <td>Oferta</td>
    </tr>
    <tbody>
        <tr>
            <td>@ViewBag.nombre</td>
            <td>@ViewBag.categoria</td>
            <td>@ViewBag.calcularPromocion</td>
            <td>@ViewBag.oferta</td>
        </tr>
    </tbody>
</table>

<h3>@ViewBag.mostrarCategoria</h3>
<h3>@ViewBag.precio</h3>